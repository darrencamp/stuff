<tr>
  <td>
    <%= loan.borrower_name if loan.borrower %>
    <p class="loan-subdetail"><%= time_ago_in_words(loan.created_at)%> ago</p>
  </td>
  <td><%= loan.item_name %></td>
  <td>   
    <div>     
    <span id="remove-loan">
      <%= form_for(loan, :html => {:method => 'delete'}) do |f| %>
          <%= f.submit "Return", :class => "btn btn-mini btn-primary" %>
      <% end %>
    </span>
    <span id="remind-loan">
      <%= form_tag "/reminder" do %>
          <%= hidden_field_tag 'id', loan.id %>
          <%= submit_tag "Remind", :class => "btn btn-mini" %>
      <% end %>
    </span>
    </div>
  </td>
</tr>