<div class="content">
  <div class="loan-header">
    <h3>Loans</h3>
  </div>
  
  <div id="new-loan" class="hero-unit" >
    <h2>Create a new loan</h2>
    <%= render 'form' %>
  </div>
  
  <div class="loans">
  <table class="table">
    <thead>
      <th>Borrower</th>
      <th>Item</th>
      <th>Actions</th>
    </thead>
    <tbody>
      <% @loans.each do |loan| %>
        <%= render '/loans/shared/loan_item', :loan => loan %>
      <% end %>
    </tbody>    
  </table>
  </div>
</div>
