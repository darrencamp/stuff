<p id="notice"><%= notice %></p>

<div class="bucket">
  <h2><%= best_in_place @bucket, :name %></h2>
  <div class="bucket-description">
    <div class="bucket-markdown">
      <%= markdown(@bucket.description) %>
    </div>
    <img class="bucket-qrcode" src="<%= qrcodes_path :format => :svg, :path => bucket_url(@bucket.id) %>"/>
  </div>
  <%= link_to 'Edit', edit_bucket_path(@bucket) %>
</div>

<div class="accordion" id="accordion2">
  <div class="accordion-group">
    <div class="accordion-heading">
      <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseOne">
        Create a new item
      </a>
    </div>
    <div id="collapseOne" class="accordion-body collapse">
      <!-- <div id="new-loan" class="hero-unit" > -->
        <div class="accordion-inner">
          <%= render '/items/form' %>
        </div>
      <!-- </div> -->
    </div>
  </div>
</div>
<table class="table">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Tags</th>
    <th colspan=3>Actions</th>
  </tr>

<% @bucket.items.each do |item| %>
  <tr>
    <td><%= item.name %></td>
    <td><%= item.description %></td>
    <td><%= item.tag_list %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

