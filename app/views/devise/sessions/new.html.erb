<h2>Login</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-vertical" }) do |f| %>
	<div class="control-group">
  		<%= f.label :email, :class => "control-label", :for => "in1" %>
  		<div class="controls">
  			<%= f.email_field :email, :id => "in1" %>
  		</div>
  	</div> 
	<div class="control-group">
  		<%= f.label :password, :class => "control-label", :for => "in2" %>
  		<div class="controls">
  			<%= f.password_field :password, :id => "in2" %>
  		</div>
	</div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>
  <div><%= f.submit "Login" %></div>
<% end %>

<%= render :partial => "devise/shared/links" %>