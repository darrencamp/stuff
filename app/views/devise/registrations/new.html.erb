

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-signin" }) do |f| %>
  <h2 class="form-signin-heading">Sign up</h2>
  <%= devise_error_messages! %>
                                                
  <%= f.text_field      :name,                  :placeholder => "Name", :label => false %>
  <%= f.email_field     :email,                 :placeholder => "Email address", :label => false %>
  <%= f.password_field :password,               :placeholder => "Password", :label => false %>
  <%= f.password_field :password_confirmation,  :placeholder => "Retype password", :label => false %>
  <%= f.submit "Sign up", :type => :large %>
<% end %>

<%= render :partial => "devise/shared/links" %>

