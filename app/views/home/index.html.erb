<% if user_signed_in? %>
  <div class="new-loan">
    <h2>Create a new loan</h2>
    <%= form_tag "/loans" do %>
      <div>
        <%= email_field :borrower, :email, :placeholder => "email address" %>
      </div>
      <div>
        <%= text_field :item, :name, :placeholder => "item name" %>
      </div>
      <%= submit_tag "Create Loan", :class => "btn" %>
    <% end %>
  </div>
  <div class="content row top-margin">
      <section id="loan-counter" class="span4 offset2 counter-container">
        <%= link_to 'Loans', :controller => 'loans', :action => 'index' do %>
          <img src="http://placehold.it/350x150&amp;text=Loans" class="loans-image">
          <div class="counter">
            <p><%= @loans.count %></p>
          </div>
        <% end %>
      </section>
      <section id="borrowing-counter" class="span4 counter-container">
        <%= link_to 'Borrowing', :controller => 'borrowing', :action => 'index' do %>
          <img src="http://placehold.it/350x150&amp;text=Borrowed" class="loans-image">
          <div class="counter">
            <p><%= @borrowing.count %></p>
          </div>
        <% end %>
      </section>
  </div>
<% end %>